{
  "name": "biojs-builder",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "precommit": "npm run lint",
    "start": "node .",
    "startDev": "nodemon",
    "make": "rm -fr dist && tsc",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "test": "nyc --reporter lcov tape $(find dist -name '*.spec.js' ! -name 'index.js') | tap-spec",
    "coverage": "nyc check-coverage --lines 80 --functions 80 --branches 80"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "dist"
    ],
    "exec": "ts-node src/index.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.spec.js",
      "**/*.d.ts"
    ]
  },
  "author": "Repositive Team",
  "license": "MIT",
  "keywords": [
    "biojs-builder",
    "service"
  ],
  "dependencies": {
    "@repositive/iris": "^1.0.0-alpha.8",
    "@types/webpack": "^4.4.19",
    "boom": "^7.3.0",
    "config": "^3.0.0",
    "hapi": "^17.8.1",
    "io-ts": "^1.5.1",
    "request": "^2.88.0",
    "source-map-support": "^0.5.9",
    "tar": "^4.4.8",
    "webpack": "^4.26.0"
  },
  "devDependencies": {
    "@repositive/typescript": "^1.1.2",
    "@types/config": "0.0.34",
    "@types/hapi": "^17.8.2",
    "@types/node": "^10.12.10",
    "@types/proxyquire": "^1.3.28",
    "@types/request": "^2.48.1",
    "@types/sinon": "^5.0.7",
    "@types/tape": "^4.2.32",
    "@types/tar": "^4.0.0",
    "husky": "^1.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.1.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
